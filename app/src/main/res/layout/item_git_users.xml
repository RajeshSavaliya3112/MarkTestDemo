<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_User_profile"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_git_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_iv_note"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:src="@drawable/ic_note"
        android:layout_marginEnd="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black"
        android:layout_marginRight="@dimen/_4sdp" />

    <TextView
        android:id="@+id/item_tv_userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Git user"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@+id/item_tv_userDetails"
        app:layout_constraintEnd_toStartOf="@+id/item_iv_note"
        app:layout_constraintStart_toEndOf="@+id/item_User_profile"
        app:layout_constraintTop_toTopOf="@+id/item_User_profile" />

    <TextView
        android:id="@+id/item_tv_userDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:text="Git user details"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toStartOf="@+id/item_iv_note"
        app:layout_constraintStart_toEndOf="@+id/item_User_profile"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_userName" />

</androidx.constraintlayout.widget.ConstraintLayout>